<header>
  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" style='margin-bottom: 20px'>
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" value='{{keyword}}' class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <!-- create new restaurant -->
      <button type="button" class="btn btn-danger"><a href="./restaurant/new"
          style='color: white; text-decoration: none'>新增餐廰</a></button>
    </div>
  </div>
</div>




<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">

    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each rests}}
        <a href="./restaurant/{{this.id}}" class="text-secondary"></a>
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
        </div>
        </a>
        <ul>
          <li>
            <a href="./restaurant/{{ this._id }}">Detail</a>
            <a href="./restaurant/{{ this._id }}/edit">Edit</a>
            <form action="./restaurant/{{ this._id }}/delete" method="POST" style="display: inline;">
              <button type="submit">delete</button>
            </form>
          </li>
        </ul>

        {{/each}}
      </div>

    </div>

  </div>
</div>