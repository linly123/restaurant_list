<header>
  <div class="banner"></div>
</header>

<!-- search bar & sort by-->
<div class='filter-container'>
  <form action="/search" class="search-bar">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">
          <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i>
            </i></button></span>
      </div>
      <input type="text" name="keyword" value='{{keyword}}' class="form-control" placeholder="輸入餐廳、分類"
        aria-label="Restaurant Name..." aria-describedby="search-button">
    </div>
  </form>

  <div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      排序/篩選
    </a>

    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      <a class="dropdown-item" href="/asc">A 至 Z</a>
      <a class="dropdown-item" href="/desc">Z 至 A</a>
      <a class="dropdown-item" href="/category">類別</a>
      <a class="dropdown-item" href="/location">地區</a>
    </div>
  </div>
</div>



<div class="row row-cols-1 row-cols-md-3 container mt-5" id='card-container'>
  {{#each rests}}
  <div class="col-md-3 col-12 mx-auto single-card">
    <div class="card h-100">
      <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
      <div class="card-body">
        <h6 class="card-title mb-1">{{this.name}}</h6>

        <div class="restaurant-category mb-1">
          <i class="fas fa-utensils pr-2"></i> {{this.category}}
        </div>
        <div class="restaurant-category mb-1">
          <i class="fas fa-map-marker-alt"></i> {{this.location}}
        </div>
        <span class="badge badge-pill badge-danger font-weight-normal">
          {{this.rating}}
          <i class="fas fa-star fa-xs"></i>
        </span>
      </div>
      <ul class='features'>
        <li>
          <a href="./restaurant/{{ this._id }}">Detail</a>
          <a href="./restaurant/{{ this._id }}/edit">Edit</a>
          <form action="./restaurant/{{ this._id }}/?_method=DELETE" method="POST" style="display: inline;">
            <button class='del-btn' type="submit">delete</button>
          </form>
        </li>
      </ul>
    </div>
  </div>
  {{/each}}
</div>