<header>
  <div class="banner"></div>
</header>

<h1 class="mb-1 restaurant-show-title" style="text-align: center; margin: 20px auto;">{{rest.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <a href="/">
        <h4>
          < Back </h4>
      </a>
      <a href="/restaurant/{{ rest._id }}/edit">
        <h4> Edit </h4>
      </a>
      <form action="/restaurant/{{ rest._id }}/delete" method="POST" style="display: inline;">
        <button type="submit">delete</button>
      </form>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{rest.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{rest.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{rest.phone}}
      </p>

      <p class="mb-5">{{rest.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src={{rest.image}} alt={{rest.name}} style="max-width: 600px;">
    </div>
  </div>
</div>